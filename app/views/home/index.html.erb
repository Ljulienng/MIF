

    <!-- cover -->
    <section class="p-0">
      <div class="swiper-container text-white"
        data-top-top="transform: translateY(0px);"
        data-top-bottom="transform: translateY(250px);">
        <div class="swiper-wrapper">
          <div class="swiper-slide vh-100">
            <div class="image image-overlay image-zoom" style="background-image:url('<%=asset_path("cities/paris.jpg")%>');"></div>
            <div class="caption">
              <div class="container">
                <div class="row align-items-center vh-100">
                  <div class="col-md-8" data-swiper-parallax-y="-250%">
                    <span class="eyebrow mb-2">Travel</span>
                    <h1 class="display-2">Come Turn Up with your new penfriend in Paris</h1>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="swiper-footer mb-5">
            <div class="container-fluid">
              <div class="row">
                <div class="col text-center">
                  <div class="mouse"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- / presentation -->



    <!-- right sidebar -->
    <section>
      <div class="container-fluid">
        <div class="row">
          <div class="col">
            <ul class="masonry row gutter-2">
              <% @cities.each do |city|%>
              <li class="col-md-6 col-lg-3">
                <% if city.name == "Paris" %>
                  <article class="tile">
                <% end %>
                <% if city.id.even? %>
                  <article class="tile tile-long">
                <% else %>
                  <% if city.id % 5 == 0 %>
                    <article class="tile tile-long">
                  <% end %>
                  <article class="tile">
                <% end %>
                  <div class="tile-image" style="background-image: url('<%=asset_path("cities/#{city.name.downcase}.jpg")%>');"></div>
                    <%= link_to city_path(city.id) do%>
                    <div class="tile-header">
                      <h2 class="text-white" style="text-align: center"><%= city.name %></h2>
                      <h4 class="text-white" style="text-align: center"><strong><%= city.users.count %> miffers </strong></h4>
                    </div>
                    <% end %>
                </article>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- / right sidebar -->

