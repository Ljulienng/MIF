<p id="notice"><%= notice %></p>

<h1>Correspondances</h1>

<table>
  <thead>
    <tr>
      <th>User1</th>
      <th>User2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @correspondances.each do |correspondance| %>
      <tr>
        <td><%= correspondance.user1 %></td>
        <td><%= correspondance.user2 %></td>
        <td><%= link_to 'Show', correspondance %></td>
        <td><%= link_to 'Edit', edit_correspondance_path(correspondance) %></td>
        <td><%= link_to 'Destroy', correspondance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

