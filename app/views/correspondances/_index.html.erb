									<div class="media-body">
										<h5 class="mb-0"><%= friend.name %></h5>
										<p>View profil</p>
									</div>
								</div>
							<% end %>
						</div>
						<p><%= correspondance.message %></p>
					</div>
				</div>
			<% end %>
		<% end %>
  </div>
