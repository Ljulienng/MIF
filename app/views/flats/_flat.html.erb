
<div class="container col-9">
  <div class="container pr-5 pl-5">
    <div class="row gutter-2 gutter-lg-4">
      <div class="col-md-6 col-lg-4">
        <div class="media align-items-center mb-2">
          <i class="fas text-primary fa-2x mr-3 fa-users"></i>
          <h5 class="fs-25 font-weight-bold"><%= @flat.place %> place(s)</h5>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="media align-items-center mb-2">
          <i class="fas text-primary fa-2x mr-3 fa-bed"></i>
            <h5 class="fs-25 font-weight-bold"><%= @flat.sleep %></h5>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="media align-items-center mb-2">
          <i class="fas text-primary fa-2x mr-3 fa-home"></i>
            <h5 class="fs-25 font-weight-bold"><%= @flat.room %></h5>
        </div>
      </div>
    </div>
  </div>

    <div class="container">
      <label>Pictures</label> 
      <div class="row mb-2 ">
        <div class="col">
          <article class="card">
            <div class="card-body overflow-hidden">
              <%if @flat.pictures.attached?%>
                <div class="owl-carousel gallery visible" data-items="[2,2]" data-margin="10" data-nav="true">
                  <%(0...@flat.pictures.count).each do |pic|%>
                    <figure class="photo">
                        <%= image_tag @flat.pictures[pic], :alt => "Image",:style => "height: 250px"%>
                    </figure>
                  <% end %>  
                </div>
              <% end %>                             
            </div>
          </article>
        </div>
      </div>
    </div>
  

  <div class="container"> 
    <label>Description</label> 
  	<article class="card"> 
      <div class="mb-1 mt-1 p-2">
        <%= @flat.description %>
      </div>
    </article>
  </div>
</div>
  <!-- / post -->