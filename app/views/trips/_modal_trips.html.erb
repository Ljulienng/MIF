<div class="modal" tabindex="-1" role="dialog", id="modal_trips">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Ask <%= @other_user.first_name %> to be your penfriend</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @trip, local: true) do |form| %>
          <%= form.hidden_field :correspondance_id, :value => current_user.id %>
          <div class="row">
            <div class="field col-10">
              <%= form.text_field :start_date, placeholder: "Write a message", class: "form-control" %>
            </div>
            <%= button_tag(type: 'submit', class: "border-0 bg-white") do %>
              <i class="fas fa-paper-plane fa-2x  text-primary"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
