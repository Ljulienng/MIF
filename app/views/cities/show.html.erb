<% if false %>
<section>
  <div class="container-fluid pt-2">
    <div class="row">
      <div class="col">
        <ul class="masonry row gutter-2">
          <% @city.users.each do |user|%>
          <li class="col-md-6 col-lg-2">
              <article class="tile">
                <div class="tile-image" style="background-color: grey;"></div>
                <div class="tile-header">
                  <h2 class="text-black" style="text-align: center"><%= user.first_name %></h2>
                </div>
            </article>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>
<% end %>

<section class="p-0 bg-light">
  <div class="image image-overlay image-cover" style="background-image:url(<%=rails_blob_url(@city.picture)%>)"
    data-top-top="transform: translateY(0px);"
    data-top-bottom="transform: translateY(-250px);"></div>
    <div class="container">
      <div class="row justify-content-left align-items-end vh-50 mb-5">
        <div class="col col-md-10 col-lg-8">
          <div class="row align-items-left">
            <div class="col mt-25">
              <div class="row align-items-left">
                <div class="col-md-8">
                  <h1 class="mb-0"><b><%= @city.name.slice(0,1).capitalize + @city.name.slice(1..-1) %></h1>
                  <h2 class="mb-0 text-black"><%= @city.country.capitalize %></h2>
                  <div>
                      <%= link_to cities_path, class:"btn btn-rounded btn-with-ico btn-primary" do %>
                        View All Cities <i class="fas fa-chevron-right fs-24"></i>
                      <%end%>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

    <!-- cover -->
    <!-- / cover -->

    <!-- team -->
    <section class="bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 text-center">
          <p class="lead text-black"> <%=@city.description%> </p>
          </div>
        </div>
        <div class="row gutter-0">
          <% @city.users.each_with_index do |user,count| %>
            <% if count == 1 %>
              <div class="col-md-4">
            <% else %>
              <div class="col-md-4" style="border-radius: 30px;" data-aos="fade-up" data-aos-delay="<%= count * 100 %>">
            <% end %>
              <%= render partial: "users/user_card", locals: {user: user} %>
              </div>
          <% end %>
        </div>
      </div>
    </section>
    <!-- / team -->
