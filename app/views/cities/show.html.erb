<% if false %>
<section>
  <div class="container-fluid pt-2">
    <div class="row">
      <div class="col">
        <ul class="masonry row gutter-2">
          <% @city.users.each do |user|%>
          <li class="col-md-6 col-lg-2">
              <article class="tile">
                <div class="tile-image" style="background-color: grey;"></div>
                <div class="tile-header">
                  <h2 class="text-black" style="text-align: center"><%= user.first_name %></h2>
                </div>
            </article>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>
<% end %>



    <!-- cover -->
    <section class="hero hero-with-header text-white"
      data-top-top="transform: translateY(0px);"
      data-top-bottom="transform: translateY(250px);">
      <%= image_tag(@city.picture, :alt => "avatar", class: "image image-overlay image-blur", style: "transform: scale(1.1);") %>
      <div class="container">
        <div class="row align-items-center">
          <div class="col text-shadow">
            <div class="row gutter-1">
              <div class="col-md-5">
                <%= link_to cities_path, class:"btn btn-rounded btn-with-ico btn-primary" do %>
                  View All Cities <i class="icon-chevron-right2 fs-24"></i>
                <%end%>
              </div>
              <div class="col-md-2">
              </div>
            </div>
            <h1 class="font-weight-bold"><%= @city.name.slice(0,1).capitalize + @city.name.slice(1..-1) %></h1>
            <h2 class="mb-0"><%= @city.country.capitalize %></h2>
          </div>
        </div>
      </div>
    </section>
    <!-- / cover -->

    <!-- team -->

    <% @city.users.each_with_index do |user,index| %>
    <% if current_user.user_preferences
    <section class="bg-white">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 text-center">
            <span class="eyebrow d-block mb-1 text-primary">Miffers in <%=@city.name%></span>
            <p class="lead text-black"> <%=@city.description%> </p>
          </div>
        </div>
        <div class="row gutter-0">
          <% @city.users.each_with_index do |user,count| %>
            <% if count == 1 %>
              <div class="col-md-4">
            <% else %>
              <div class="col-md-4" style="border-radius: 30px;" data-aos="fade-up" data-aos-delay="<%= count * 100 %>">
            <% end %>
                <figure class="user m-1" style="border-radius: 5px;">
                  <%= link_to user_path(user.id), :class => "user-photo" do%>
                    <%= image_tag(user.avatar, :alt => "avatar", style: "max-width: 450px", class: "", size: "420x420") %>
                  <figcaption class="user-caption">
                    <h4><%= user.first_name + user.last_name %></h4>
                    <ul class="text-white">
                      <li><%= user.nationality %></li>
                      <li><%= user.age %></li>
                      <li><%= user.welcome_message %></li>
                    </ul>
                  </figcaption>
                  <%end%>
                </figure>
              </div>
          <% end %>
        </div>
      </div>
    </section>
    <!-- / team -->
