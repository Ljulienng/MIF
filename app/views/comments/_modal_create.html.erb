<div class="modal" tabindex="-1" role="dialog", id="modal_comments">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Leave a comment to <%= @user.name %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @comment, url: user_comments_path(@user) , local: true) do |form| %>
          <div class="row">
            <div class="field col-10">
              <%= form.text_field :content, placeholder: "Write a comment", class: "form-control" %>
            </div>
            <%= button_tag(type: 'submit', class: "border-0 bg-white") do %>
              <i class="fas fa-paper-plane fa-2x  text-primary"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>