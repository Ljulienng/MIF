    <%= render 'correspondances/modal_create' %>
    <%= render 'comments/modal_create' %>

    <section class="p-0 bg-light">
      <div class="image image-overlay image-cover" style="background-image:url('<%=asset_path("cities/#{@user.city.name.downcase}.jpg")%>')"
      data-top-top="transform: translateY(0px);"
      data-top-bottom="transform: translateY(-250px);"></div>
      <div class="container">
        <div class="row justify-content-center align-items-end vh-50 mb-5">
          <div class="col col-md-10 col-lg-8">
            <div class="row align-items-center">
              <div class="col-4 col-lg-3">
                <%if @user.avatar.attached?%>
                    <%= image_tag(@user.avatar, :alt => "avatar", class: "avatar avatar-xl rounded") %>
                <%else%>
                    <img src="/assets/img/nopic.png" alt="Avatar" class="avatar avatar-xl rounded">
                <%end%>
              </div>
              <div class="col">
                <div class="row align-items-center">
                  <div class="col-md-8">
                    <h2 class="mb-0"><b><%= @user.first_name %></b> <%= @user.last_name%></h2>
                    <span class="text-muted"><%= @user.age %> years old, <%= @user.city.name%></span> <br>
                    <span class="text-muted">"<%= @user.welcome_message %>"</span>
                  </div>
                  <div class="col-md-4 text-left text-md-right">
                    <% correspondance = Correspondance.select(current_user, @user) %>
                    <% if !correspondance %>
                      <%= link_to "#", "data-toggle" =>"modal", 'data-target' => '#modal_correspondances', class: "btn btn-rounded btn-ico btn-white", title: "Add Friend" do %>
                        Ask to be your friend<i class="fas fa-plus fa-2x p-1 text-primary"></i>
                      <% end %>
                    <% elsif correspondance.status == "waiting" && correspondance.creator == current_user %>
                      <p>Correspondance waiting for validation</p>
                    <% elsif correspondance.status == "waiting" && correspondance.creator == @user %>
                      <%= link_to "Accept", correspondance_path(correspondance, :update => true), class: "btn-success p-1", method: :put  %>
                      <%= link_to "Refuse", correspondance_path(correspondance, :update => false), class: "btn-danger p-1", method: :put  %>
                    <% elsif correspondance.status == "validated"%>
                      <%= link_to "#", "data-toggle" =>"modal", 'data-target' => '#modal_comments', class: "btn btn-rounded btn-ico btn-white", title: "Add Friend" do %>
                        Leave a comment<i class="fas fa-plus fa-2x p-1 text-primary"></i>
                      <% end %>
                    <% elsif correspondance.status == "refused"%>
                      <p>Friendship refused</p> 
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <section class="bg-light p-0">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col col-md-10 col-lg-8">
            <div class="nav nav-tabs mb-1">
              <a class="nav-item nav-link active" data-toggle="tab" href="#demo-2-1">Profile</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#demo-2-2">Comments</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#demo-2-3">Flat</a>
              
            </div>
          </div>
        </div>
      </div>
    </section>



    <section class="bg-light pt-2">

      <div class="container">
        <div class="tab-content" id="demo-2">

          <!-- tab info -->
          <div class="tab-pane show active" id="demo-2-1" role="tabpanel" aria-labelledby="demo-2-1">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-8">

                <!-- stats -->
                <div class="row gutter-1 mb-2">
                  <div class="col-6 col-md-4 col-lg-3">
                    <div class="equal">
                      <div class="boxed bg-primary text-white">
                        <div class="equal-header">
                          <b class="h2">89</b>
                        </div>
                        <div class="equal-footer">
                          <span class="text-muted">Tokens</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-6 col-md-4 col-lg-3">
                    <div class="equal">
                      <div class="boxed">
                        <div class="equal-header">
                          <b class="h2"><%= @correspondances.count %></b>
                        </div>
                        <div class="equal-footer">
                          <span class="text-muted">Correspondances</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- / stats -->

                <!-- post -->
                <div class="row mb-1">
                  <div class="col">
                    <article class="card">
                      <div class="card-header text-center">
                        <h2><%= @user.first_name %>'s diaporama</h2>
                      </div>
                      <div class="card-body overflow-hidden">
                        <div class="owl-carousel gallery visible" data-items="[2,2]" data-margin="10" data-nav="true">
                          <figure class="photo">
                            <a href="/assets/cities/barcelone.jpg" title="Image title">
                              <img src="/assets/cities/barcelone.jpg" alt="Image">
                            </a>
                          </figure>
                          <figure class="photo">
                            <a href="/assets/cities/london.jpg" title="Image title">
                              <img src="/assets/cities/london.jpg" alt="Image">
                            </a>
                          </figure>
                          <figure class="photo">
                            <a href="/assets/cities/paris.jpg" title="Image title">
                              <img src="/assets/cities/paris.jpg" alt="Image">
                            </a>
                          </figure>
                        </div>
                      </div>
                    </article>
                  </div>
                </div>
                <!-- / post -->


                <div class="row mb-1">
                  <div class="col">
                    <article class="card">
                      <div class="card-header text-center">
                          <h2><%= @user.first_name%>'s description</h2>
                      </div>
                      <div class="card-body overflow-hidden">
                       <h3 class="text-decorated text-decorated--paddin"><%= @user.description %></h3>
                      </div>
                    </article>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <!-- / tab -->


          <!-- tab connections -->
          <div class="tab-pane" id="demo-2-2" role="tabpanel" aria-labelledby="demo-2-2">
            <%= render "comments/index" %>
          </div>
          
          <div class="tab-pane" id="demo-2-3" role="tabpanel" aria-labelledby="demo-2-3">
          <%= render "flats/flat" %>
          </div>
        </div>
    </div>
</section>
