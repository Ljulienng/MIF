<p id="notice"><%= notice %></p>

<h1>Testifies</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testifies.each do |testify| %>
      <tr>
        <td><%= testify.user %></td>
        <td><%= testify.content %></td>
        <td><%= testify.accepted %></td>
        <td><%= link_to 'Show', testify %></td>
        <td><%= link_to 'Edit', edit_testify_path(testify) %></td>
        <td><%= link_to 'Destroy', testify, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

